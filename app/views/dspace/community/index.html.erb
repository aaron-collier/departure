<div id="page-wrapper">
     <div class="row">
         <div class="col-lg-12">
             <h1 class="page-header">DSpace Communities</h1>
         </div>
         <!-- /.col-lg-12 -->
     </div>
     <!-- /.row -->
     <div class="row">
       <table class="table table-striped">
         <% @community_presenter.root_communities.each do |community| %>
           <tr class='clickable-row' data-url='<%= url_for(community) %>'><td><%= community.name %></td></tr>
         <% end %>
       </table>
     </div>
</div>

<script>
jQuery(document).ready(function($) {
    $(".clickable-row").click(function() {
        window.location = $(this).data("url");
    });
});
</script>